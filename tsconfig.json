{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist/",

    "baseUrl": "./server/",

    "target": "es2018",
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "strict": true,

    "noUnusedLocals": true,

    "jsx": "react",

    "typeRoots": ["./@types"]
  }
}
